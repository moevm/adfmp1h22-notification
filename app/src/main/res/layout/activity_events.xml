<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9951AFDA"
    tools:context=".activity.EventsActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#D6D6D6"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llFields"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/TextLine12"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:clickable="false">

                        <TextView
                            android:id="@+id/tv22"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:clickable="true"
                            android:fontFamily="sans-serif"
                            android:gravity="center|left"
                            android:onClick="editEventOnClick"
                            android:text="Отпуск в Сочи - 24.02.2022"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <LinearLayout
                        android:id="@+id/TextLine1"
                        android:layout_width="match_parent"
                        android:layout_height="65dp">

                        <TextView
                            android:id="@+id/tv2"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:clickable="true"
                            android:fontFamily="sans-serif"
                            android:gravity="center|left"
                            android:onClick="editEventOnClick"
                            android:text="Кино - 31.02.2022"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider11"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <LinearLayout
                        android:id="@+id/TextLine122"
                        android:layout_width="match_parent"
                        android:layout_height="65dp">

                        <TextView
                            android:id="@+id/tv222"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:clickable="true"
                            android:enabled="false"
                            android:fontFamily="sans-serif"
                            android:gravity="center|left"
                            android:onClick="editEventOnClick"
                            android:singleLine="false"
                            android:text="@string/croosed_two"
                            android:textColor="#000000"
                            android:textSize="20sp"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <View
                        android:id="@+id/divider13"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:orientation="vertical">

                    <ImageButton
                        android:id="@+id/delBtn1"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="0dp"
                        android:contentDescription="TODO"
                        android:onClick="deleteEventOnClick"
                        android:src="@android:drawable/ic_menu_delete"
                        android:visibility="visible" />

                    <View
                        android:id="@+id/divider8"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <ImageButton
                        android:id="@+id/delBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="0dp"
                        android:contentDescription="TODO"
                        android:onClick="deleteEventOnClick"
                        android:src="@android:drawable/ic_menu_delete"
                        android:visibility="visible" />

                    <View
                        android:id="@+id/divider14"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                    <ImageButton
                        android:id="@+id/delBtn5"
                        android:layout_width="wrap_content"
                        android:layout_height="65dp"
                        android:layout_gravity="right"
                        android:layout_marginEnd="0dp"
                        android:contentDescription="TODO"
                        android:onClick="deleteEventOnClick"
                        android:src="@android:drawable/ic_menu_delete"
                        android:visibility="visible" />

                    <View
                        android:id="@+id/divider12"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="15dp"
            android:onClick="editEventOnClick"
            app:srcCompat="@android:drawable/ic_input_add"
            tools:ignore="SpeakableTextPresentCheck" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>